<Window x:Class="DXGrid_DisplayTotals.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:data="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    Title="Window1" Height="300" Width="521">
    <Grid>
        <dxg:GridControl x:Name="grid" AutoPopulateColumns="True">
            <dxg:GridControl.TotalSummary>
                <data:GridSummaryItem FieldName="UserName" SummaryType="Count"
                                      DisplayFormat="Total Users: {0}"/>
                <data:GridSummaryItem FieldName="Age" SummaryType="Min"/>
                <data:GridSummaryItem FieldName="Age" SummaryType="Max"/>
            </dxg:GridControl.TotalSummary>
            <dxg:GridControl.View>
                <dxg:TableView AutoWidth="True" ShowTotalSummary="True" />
            </dxg:GridControl.View>
        </dxg:GridControl>
    </Grid>
</Window>
